<!doctype html>
<html>

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
	<link href="{{ url_for('static', filename='css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
	<link href="{{ url_for('static', filename='css/404.css') }}" rel="stylesheet" type="text/css">
	{%block head%}
	<title>404</title>
	{%endblock%}
</head>

<body>
    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
        <header class="masthead mb-5">
            <div class="inner">
                <h3 class="masthead-brand">404</h3>
            </div>
        </header>
    
        <main role="main" class="inner cover">
            
			{% if error == None %}
				<h1 onclick="window.location.href = '/'" class="cover-heading">This is the page that does NOT exist yet</h1>
				<p class="lead">

					哈哈哈哈哈嗝哈哈哈哈哈
				</p>
			{% else %}
				<p class="lead">
					{{ error }}
				</p>
			{% endif %}

        </main>
    </div>

	<a href='/'>点我返回主页</a>

	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<script src="{{ url_for('static', filename='Scripts/jquery-3.2.1.slim.min.js') }}"></script>
	<!-- Include all compiled plugins (below), or include individual files as needed -->
	<script src="{{ url_for('static', filename='js/bootstrap.min.js') }}"></script>
	<!-- our own scripts -->
	<script src="{{ url_for('static', filename='Scripts/HomePage.js') }}"></script>
</body>

</html>