{%block body%}

{# 得到file #}
{% set fileDict = J2SessionQueryFileUpload()  %}
<form id="formUpload" method="POST" enctype="multipart/form-data">
<h1>txt2mobi</h1>
<p> txt转mobi(kindle识别的格式),可自动生成目录 </p>
<p>使用说明：</p>
<p>单击浏览选择txt文件，upload上传需要转换的txt文件；</p>
<h1>{{ gettext( "上传" ) }}</h1>
    {{ form.hidden_tag() }}
    {{ form.file }}
    {# 提交按钮 #}
    {{ form.upload }}
    {# 输出错误 #}
    {% for error in form.file.errors %}
    <div class="alert alert-danger" role="alert">
        [{{ error }}]
    </div>
    {% endfor %}
</form>



